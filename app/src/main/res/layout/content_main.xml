<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hello_username"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="48dp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/cabinet_title"
        android:text="Choose mode"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/hello_username"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/creator_course_list_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh list"
        app:layout_constraintTop_toTopOf="@id/cabinet_title"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toBottomOf="@id/cabinet_title"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>